<UserControl x:Class="DMT.Controls.TODStatusBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ctrl="clr-namespace:DMT.Controls.StatusBar"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="30"
             d:DesignWidth="800"
             mc:Ignorable="d">
    <DockPanel Background="DimGray" LastChildFill="True">
        <ctrl:LocalDbStatus DockPanel.Dock="Left"/>
        <ctrl:SCWStatus DockPanel.Dock="Left"/>
        <ctrl:AppInfoStatus DockPanel.Dock="Right"/>
        <Grid />
    </DockPanel>
</UserControl>
