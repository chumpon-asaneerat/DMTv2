        <DataGrid x:Name="listViewUse"
                  Grid.Column="3"
                  HorizontalContentAlignment="Left"
                  FontSize="18"
                  ItemsSource="{Binding}"
                  SelectionMode="Extended"
                  AlternatingRowBackground="AntiqueWhite"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  FontWeight="Normal"
                  FontFamily="Tahoma"
                  HorizontalGridLinesBrush="Silver"
                  VerticalGridLinesBrush="Silver"
                  ScrollViewer.CanContentScroll="True"
                  ScrollViewer.VerticalScrollBarVisibility="Auto"
                  ScrollViewer.HorizontalScrollBarVisibility="Auto">
            <DataGrid.Columns>
                <DataGridTextColumn Width="80"
                                    Binding="{Binding Path=JobNo, Mode=OneWay}"
                                    Header="Job No"
                                    IsReadOnly="True">
                    <DataGridTextColumn.HeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="HorizontalContentAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.HeaderStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Width="120"
                                    Binding="{Binding Path=StaffId, Mode=OneWay}"
                                    Header="รหัสพนักงาน"
                                    IsReadOnly="True">
                    <DataGridTextColumn.HeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="HorizontalContentAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.HeaderStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Width="200"
                                    Binding="{Binding Path=BeginDateString, Mode=OneWay}"
                                    Header="วันเวลาเริ่มปฎิบัติงาน"
                                    IsReadOnly="True">
                    <DataGridTextColumn.HeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="HorizontalContentAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.HeaderStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Width="200"
                                    Binding="{Binding Path=EndDateString, Mode=OneWay}"
                                    Header="วันเวลาเลิกปฎิบัติงาน"
                                    IsReadOnly="True">
                    <DataGridTextColumn.HeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="HorizontalContentAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.HeaderStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Width="80"
                                    Binding="{Binding Path=LaneId, Mode=OneWay}"
                                    Header="เลน"
                                    IsReadOnly="True">
                    <DataGridTextColumn.HeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="HorizontalContentAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.HeaderStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Width="200"
                                    Binding="{Binding Path=DateTODDateString, Mode=OneWay}"
                                    Header="วันเวลาทำ TOD"
                                    IsReadOnly="True">
                    <DataGridTextColumn.HeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="HorizontalContentAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.HeaderStyle>
                </DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</UserControl>
