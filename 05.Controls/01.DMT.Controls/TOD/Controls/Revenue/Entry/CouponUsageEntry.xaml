<UserControl x:Class="DMT.TOD.Controls.Revenue.Entry.CouponUsageEntry"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="250" 
             d:DesignWidth="800"
             Loaded="UserControl_Loaded"
             Unloaded="UserControl_Unloaded">
    <Grid>
        <Border BorderBrush="AliceBlue" 
                BorderThickness="1">
            <DockPanel>
                <!-- Description -->
                <Border DockPanel.Dock="Top">
                    <Border.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="#7F323232" Offset="0"/>
                            <GradientStop Color="#7FAAAAAA" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                    <TextBlock Margin="2"
                               DockPanel.Dock="Left" 
                               TextAlignment="Center"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Text="การใช้คูปอง"
                               Width="110"/>
                </Border>
                <StackPanel Orientation="Vertical" Margin="10 5 10 5">
                    <!-- Seperator -->
                    <Grid Height="5"/>
                    <!-- Bag No. -->
                    <!--
                    <DockPanel Margin="5 0 5 0">
                        <TextBlock Margin="2"
                               DockPanel.Dock="Left" 
                               TextAlignment="Right"
                               Text="หมายเลขถุงเงิน"
                               Width="140"/>
                        <TextBox Margin="2"
                             TextAlignment="Center"
                             Text="{Binding BagNo}"/>
                    </DockPanel>
                    -->
                    <!-- 30 BHT -->
                    <DockPanel Margin="5 0 5 0">
                        <TextBlock Margin="2"
                               DockPanel.Dock="Left" 
                               TextAlignment="Right"
                               Text="30 บาท"
                               Width="140"/>
                        <TextBlock Margin="2"
                               DockPanel.Dock="Right" 
                               TextAlignment="Left"
                               Text="ฉบับ"
                               Width="40"/>
                        <TextBox x:Name="txt30Baht" Margin="2"
                                 TextAlignment="Right"
                                 Text="{Binding CouponUsageBHT30}"
                                 Width="50" KeyDown="txt30Baht_KeyDown"/>
                    </DockPanel>
                    <!-- 35 BHT -->
                    <DockPanel Margin="5 0 5 0">
                        <TextBlock Margin="2"
                               DockPanel.Dock="Left" 
                               TextAlignment="Right"
                               Text="35 บาท"
                               Width="140"/>
                        <TextBlock Margin="2"
                               DockPanel.Dock="Right" 
                               TextAlignment="Left"
                               Text="ฉบับ"
                               Width="40"/>
                        <TextBox x:Name="txt35Baht" Margin="2"
                                 TextAlignment="Right"
                                 Text="{Binding CouponUsageBHT35}"
                                 Width="50" KeyDown="txt35Baht_KeyDown"/>
                    </DockPanel>
                    <!-- 75 BHT -->
                    <DockPanel Margin="5 0 5 0">
                        <TextBlock Margin="2" 
                               DockPanel.Dock="Left"  
                               TextAlignment="Right" 
                               Text="70 บาท" 
                               Width="140"/>
                        <TextBlock Margin="2"
                               DockPanel.Dock="Right" 
                               TextAlignment="Left"
                               Text="ฉบับ"
                               Width="40"/>
                        <TextBox x:Name="txt70Baht" Margin="2"
                                 TextAlignment="Right"
                                 Text="{Binding CouponUsageBHT70}"
                                 Width="50" KeyDown="txt70Baht_KeyDown"/>
                    </DockPanel>
                    <!-- 80 BHT -->
                    <DockPanel Margin="5 0 5 0">
                        <TextBlock Margin="2" 
                            DockPanel.Dock="Left"  
                            TextAlignment="Right" 
                            Text="80 บาท" 
                            Width="140"/>
                        <TextBlock Margin="2"
                               DockPanel.Dock="Right" 
                               TextAlignment="Left"
                               Text="ฉบับ"
                               Width="40"/>
                        <TextBox x:Name="txt80Baht" Margin="2"
                                 TextAlignment="Right"
                                 Text="{Binding CouponUsageBHT80}"
                                 Width="50"/>
                    </DockPanel>
                    <!-- Total BHT -->
                    <DockPanel Margin="5 0 5 0">
                        <!--
                        <TextBlock Margin="2"
                                DockPanel.Dock="Left" 
                                TextAlignment="Right"
                                Text="ยอดรวม"
                                Width="140"/>
                        <TextBlock Margin="2"
                                DockPanel.Dock="Right" 
                                TextAlignment="Left"
                                Text="บาท"
                                Width="40"/>
                        <TextBox Margin="2"
                                    TextAlignment="Right"
                                    Text="{Binding BHTTotal}"
                                    IsEnabled="False"
                                    Width="90"/>
                        -->
                    </DockPanel>
                    <Grid Height="5"/>
                </StackPanel>
            </DockPanel>
        </Border>
    </Grid>
</UserControl>
