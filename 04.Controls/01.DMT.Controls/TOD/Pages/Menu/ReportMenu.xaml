                        </common:MenuButton>
                    </Grid>
                    <Grid Grid.Row="2" Grid.Column="2">
                        <common:MenuButton ImageSource="/DMT.Controls;component/Images/Menu/clock.png"
                                           Height="80"
                                           Width="180">

                        </common:MenuButton>
                    </Grid>
                </Grid>
                <Grid Grid.Column="2" Grid.Row="3">
                    <Grid.RowDefinitions>
                        <!-- CAPTION -->
                        <RowDefinition  Height="Auto" />
                        <!-- SEPERATOR -->
                        <RowDefinition Height="2" />
                        <!-- MENU BUTTONS -->
