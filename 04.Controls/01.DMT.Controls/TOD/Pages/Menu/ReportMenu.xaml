                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <!-- BUTTON COL 1 -->
                        <ColumnDefinition Width="Auto" />
                        <!-- SEPERATOR -->
                        <ColumnDefinition Width="5" />
                        <!-- BUTTON COL 2 -->
