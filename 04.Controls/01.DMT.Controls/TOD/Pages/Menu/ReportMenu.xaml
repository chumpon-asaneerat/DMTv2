                    </Grid>
                </Grid>
                <Grid Grid.Column="2" Grid.Row="0">
                    <Grid.RowDefinitions>
                        <!-- CAPTION -->
                        <RowDefinition  Height="Auto" />
                        <!-- SEPERATOR -->
                        <RowDefinition Height="2" />
                        <!-- MENU BUTTONS -->
                        <RowDefinition  Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <!-- BUTTON COL 1 -->
                        <ColumnDefinition Width="Auto" />
                        <!-- SEPERATOR -->
                        <ColumnDefinition Width="5" />
                        <!-- BUTTON COL 2 -->
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <!-- CAPTION -->
                    <Grid Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3">
                        <common:MenuGroupCaption Caption="Caption 2"/>
                    </Grid>
                    <Grid Grid.Row="2" Grid.Column="0">
                        <common:MenuButton ImageSource="/DMT.Controls;component/Images/Menu/clock.png"
