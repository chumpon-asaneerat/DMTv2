<Window x:Class="DMT.Windows.SignInWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Sign In" 
        Height="300" 
        Width="500" 
        ResizeMode="NoResize" 
        ShowInTaskbar="False" 
        HorizontalAlignment="Center" 
        VerticalAlignment="Center" 
        WindowStartupLocation="CenterOwner">
    <Grid Background="DimGray">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="25"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="25"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="25"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="1"
              Grid.Column="1"
              Grid.ColumnSpan="3"
              Grid.RowSpan="4">
            <Image Opacity="20"
                    Source="/DMT.Controls;component/Images/Background/snartcard.png"/>
        </Grid>
        <StackPanel Grid.Row="1"
                    Grid.Column="1">
            <StackPanel Margin="5">
                <TextBlock Foreground="WhiteSmoke" 
                           FontSize="18"
                           Text="กรุณาระบุรหัสพนักงาน 5 หลัก"/>
                <Grid Height="5" />
                <TextBox x:Name="txtCardId" 
                         FontSize="18"
                         Text=""/>
                <Grid Height="5" />
                <TextBlock Foreground="WhiteSmoke" 
                           FontSize="18"
                           Text="กรุณาป้อนรหัสผ่าน"/>
                <Grid Height="5" />
                <PasswordBox x:Name="txtPassword" 
                             FontSize="18"
                             PasswordChar="*"/>
                <Grid Height="5" />
            </StackPanel>
        </StackPanel>
        <Grid Grid.Row="1"
              Grid.Column="2"
              Margin="5">
            <StackPanel Margin="5 0">
                <Grid Height="20" />
                <Button x:Name="cmdOK" 
                        Height="22" Click="cmdOK_Click">OK</Button>
                <Grid Height="5"/>
                <Button x:Name="cmdCancel" 
                        Height="22" Click="cmdCancel_Click">Cancel</Button>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
